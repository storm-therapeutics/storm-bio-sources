<?xml version="1.0"?>
<!-- This file details any extensions needed to the data model to store data from this source, everything else is automatically generated from the model description so this is all we need to do to add to the model. -->

<classes>
  <class name="StormProteomicsExperiment" is-interface="true">
    <reference name="metadata" referenced-type="StormOmicsExperiment" reverse-reference="proteomicsExperiment"/>
    <collection name="proteinGroups" referenced-type="ProteomicsProteinGroup" reverse-reference="experiment"/>
    <collection name="msStatsResults" referenced-type="ProteomicsMSstatsResult" reverse-reference="experiment"/>
  </class>

  <class name="ProteomicsProteinGroup" is-interface="true">
    <attribute name="identificationQValue" type="java.lang.Double"/>
    <!-- "proteins" (collection) is not allowed as database key, so make a string version: -->
    <attribute name="accessions" type="java.lang.String"/>
    <reference name="experiment" referenced-type="StormProteomicsExperiment"/>
    <collection name="proteins" referenced-type="Protein" reverse-reference="proteomicsProteinGroups"/>
    <collection name="abundances" referenced-type="ProteomicsLFQAbundance" reverse-reference="proteinGroup"/>
  </class>

  <class name="ProteomicsLFQAbundance" is-interface="true">
    <attribute name="abundance" type="java.lang.Double"/>
    <reference name="sample" referenced-type="StormOmicsSample"/>
    <reference name="proteinGroup" referenced-type="ProteomicsProteinGroup" reverse-reference="abundances"/>
  </class>

  <class name="ProteomicsMSstatsResult" is-interface="true">
    <attribute name="log2FoldChange" type="java.lang.Double"/>
    <attribute name="rawPValue" type="java.lang.Double"/>
    <attribute name="adjPValue" type="java.lang.Double"/>
    <attribute name="missingFraction" type="java.lang.Double"/>
    <attribute name="imputedFraction" type="java.lang.Double"/>
    <reference name="experiment" referenced-type="StormProteomicsExperiment" reverse-reference="msStatsResults"/>
    <reference name="conditionTreatment" referenced-type="StormOmicsCondition"/>
    <reference name="conditionControl" referenced-type="StormOmicsCondition"/>
    <reference name="proteinGroup" referenced-type="ProteomicsProteinGroup"/>
  </class>

  <class name="Protein" is-interface="true">
    <collection name="proteomicsProteinGroups" referenced-type="ProteomicsProteinGroup" reverse-reference="proteins"/>
  </class>

  <class name="StormOmicsExperiment" is-interface="true">
        <reference name="proteomicsExperiment" referenced-type="StormProteomicsExperiment" reverse-reference="metadata"/>
  </class>

  <class name="StormOmicsCondition" is-interface="true"/>
  <class name="StormOmicsSample" is-interface="true"/>
</classes>
